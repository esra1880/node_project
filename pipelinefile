pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/esra1880/node_project'
      }
    }
     
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build' // Özelleştirilecek build komutunu ekleyin
      }
    }  
    
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
  }
}
